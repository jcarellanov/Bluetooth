<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview_bt_paired_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="BT NAME"
        android:textColor="#000000"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textview_bt_paired_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="BT ADDRESS"
        android:textColor="#000000"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/textview_bt_paired_name"
        app:layout_constraintTop_toBottomOf="@+id/textview_bt_paired_name"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textview_bt_paired_name"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textview_bt_paired_bond_state"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="BT BOND STATE"
        android:textColor="#000000"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/textview_bt_paired_address"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textview_bt_paired_address"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textview_bt_paired_address" />

    <TextView
        android:id="@+id/textview_bt_paired_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="BT TYPE"
        android:textColor="#000000"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/textview_bt_paired_bond_state"
        app:layout_constraintTop_toBottomOf="@+id/textview_bt_paired_bond_state"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textview_bt_paired_bond_state"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="16dp" />

</android.support.constraint.ConstraintLayout>